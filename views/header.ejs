<header>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <div id="leftHeader">
        <h2><a href='/'>Peer2Peer</a></h2>
        <% if (signedIn) { %>
            <p>Welcome, <%=firstName%></p>
        <% } %>
    </div>
    <div id='rightHeader'>
        <a href='/'>Home</a>
        <% if (!signedIn) { %>
            <a href='/auth'>Sign up with Google</a>
        <% } else { %>
            <% if (isStudent) { %>
                <a href='/student'>Student Home</a>
            <% } else { %>
                <a href='/signup/student'>Signup as Student</a>
            <% } %>

            <% if (isMentor) { %>
                <a href='/mentor'>Mentor Home</a>
            <% } else if (appliedMentor) { %>
                <a>Your Mentor application is being processed.</a>
            <% } else { %>
                <a href='/signup/mentor'>Apply for Mentor</a>
            <% } %>

            <% if (isPeerLeader) { %>
                <a href='/peerleader'>Peer Leader Home</a>
            <% } %>

            <a href='/account'>Account</a>
            <a href='/logout'>Logout</a>
        <% } %>
    </div>
</header>
